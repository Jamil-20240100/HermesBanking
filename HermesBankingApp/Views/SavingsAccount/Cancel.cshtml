@model CancelSavingsAccountViewModel

@{
    ViewData["Title"] = "Confirmar Cancelación de Cuenta";
}

<h2 class="mb-4 text-danger">Cancelar Cuenta de Ahorro</h2>

<div class="alert alert-warning">
    <strong>Atención:</strong> Estás a punto de cancelar esta cuenta de ahorro secundaria. Esta acción inactivará la cuenta, pero no la eliminará del sistema.
</div>

<form asp-action="Cancel" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label fw-bold">¿Deseas continuar?</label>
        <p>Esta acción no podrá deshacerse.</p>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        <button type="submit" class="btn btn-danger">Confirmar Cancelación</button>
    </div>
</form>
