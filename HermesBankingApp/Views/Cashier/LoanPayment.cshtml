@model HermesBanking.Core.Application.ViewModels.Cashier.PagoPrestamoViewModel

@{
    Layout = "_LayoutCashier";
    ViewData["Title"] = "Prestamo";
}

<h3>Pago a préstamo</h3>

<!-- Mostrar el mensaje de error si existe en TempData -->
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
<!-- Mostrar el mensaje de éxito si existe en TempData -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<form asp-action="PayLoan" method="post">
    <div class="form-group">
        <label asp-for="AccountNumber"></label>
        <input asp-for="AccountNumber" class="form-control" />
        <span asp-validation-for="AccountNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LoanNumber"></label>
        <input asp-for="LoanNumber" class="form-control" />
        <span asp-validation-for="LoanNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Continuar</button>
</form>

