@model HermesBanking.Core.Application.ViewModels.Cashier.ThirdPartyTransferViewModel

@{
    Layout = "_LayoutCashier";
    ViewData["Title"] = "Transferencia a terceros";
}

<h2>Transferencia a terceros</h2>

<form asp-action="ConfirmThirdPartyTransfer" method="post">
    <div class="form-group mb-3">
        <label asp-for="SourceAccountNumber"></label>
        <input asp-for="SourceAccountNumber" class="form-control" />
        <span asp-validation-for="SourceAccountNumber" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DestinationAccountNumber"></label>
        <input asp-for="DestinationAccountNumber" class="form-control" />
        <span asp-validation-for="DestinationAccountNumber" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Continuar</button>
</form>
