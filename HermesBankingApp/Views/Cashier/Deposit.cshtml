@model HermesBanking.Core.Application.ViewModels.Cashier.DepositViewModel

@{
    Layout = "_LayoutCashier"; // Si tienes uno para cajero. Si no, usa "_LayoutClient" o "_Layout"
    ViewData["Title"] = "Depósito";
}

<h2>Depósito</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Deposit" method="post">
    <div class="mb-3">
        <label class="form-label">Cuenta destino</label>
        <input asp-for="AccountNumber" class="form-control" />
        <span asp-validation-for="AccountNumber" class="text-danger"></span>
        @Html.ValidationMessageFor(m => m.AccountNumber, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label class="form-label">Monto</label>
        <input asp-for="Amount" class="form-control" />
        @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Confirmar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
