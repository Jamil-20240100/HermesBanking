@model HermesBanking.Core.Application.ViewModels.ExpressTransactionViewModel

@{
    ViewData["Title"] = "Confirmar Transacción Express";
    Layout = "_LayoutClient";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Confirmar Transacción Express</h3>
                </div>
                <div class="card-body">
                    <dl class="row mb-4">
                        <dt class="col-sm-5">Cuenta Origen</dt>
                        <dd class="col-sm-7">@Model.SenderAccountNumber</dd>

                        <dt class="col-sm-5">Cuenta Destino</dt>
                        <dd class="col-sm-7">@Model.ReceiverAccountNumber</dd>

                        <dt class="col-sm-5">Monto (RD$)</dt>
                        <dd class="col-sm-7">@Model.Amount.ToString("N2")</dd>
                    </dl>

                    <form asp-action="ConfirmTransactionExpress" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="SenderAccountNumber" />
                        <input type="hidden" asp-for="ReceiverAccountNumber" />
                        <input type="hidden" asp-for="Amount" />
                        <input type="hidden" name="confirm" value="yes" />

                        <button type="submit" class="btn btn-success btn-lg">Confirmar</button>
                        <a asp-action="Index" asp-controller="Transaction" class="btn btn-secondary btn-lg">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
