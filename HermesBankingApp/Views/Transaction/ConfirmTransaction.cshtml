@model HermesBanking.Core.Application.ViewModels.TransactionViewModel

@{
    ViewData["Title"] = "Confirm Transaction";
    Layout = "_LayoutClient";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Confirm Transfer</h3>
                </div>
                <div class="card-body">
                    <p>Please confirm the details of your transaction:</p>

                    <div class="form-group">
                        <label class="form-label fw-bold">Savings Account</label>
                        <p>@Model.SavingsAccountId</p>
                    </div>

                    <div class="form-group">
                        <label class="form-label fw-bold">Amount to Transfer</label>
                        <p>@Model.Amount</p>
                    </div>

                    <div class="form-group">
                        <label class="form-label fw-bold">Transaction Type</label>
                        <p>@Model.Type</p>
                    </div>

                    <div class="form-group">
                        <label class="form-label fw-bold">Origin</label>
                        <p>@Model.Origin</p>
                    </div>

                    <div class="form-group">
                        <label class="form-label fw-bold">Beneficiary</label>
                        <p>@Model.Beneficiary</p>
                    </div>

                    <div class="form-group">
                        <label class="form-label fw-bold">Cashier ID</label>
                        <p>@Model.CashierId</p>
                    </div>

                    <div class="d-grid">
                        <form asp-action="ConfirmTransaction" method="post">
                            <input type="hidden" asp-for="SavingsAccountId" />
                            <input type="hidden" asp-for="Amount" />
                            <input type="hidden" asp-for="Type" />
                            <input type="hidden" asp-for="Origin" />
                            <input type="hidden" asp-for="Beneficiary" />
                            <input type="hidden" asp-for="CashierId" />

                            <button type="submit" class="btn btn-primary btn-lg">Confirm Transaction</button>
                        </form>
                    </div>

                    <div class="d-grid mt-2">
                        <form asp-action="CancelTransaction" method="post">
                            <button type="submit" class="btn btn-danger btn-lg">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
