@model PayCreditCardViewModel


@{
    ViewData["Title"] = "Pago de Tarjeta de Crédito";
    Layout = "_LayoutClient";
    var accountsList = Model.AvailableAccounts ?? new List<SavingsAccountViewModel>();
    var cardsList = Model.AvailableCreditCards ?? new List<CreditCardViewModel>();
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Pago de Tarjeta de Crédito</h3>
                </div>
                <div class="card-body">
                    <p class="mb-3">Realiza un pago directo a tu tarjeta de crédito desde una cuenta de ahorros.</p>

                    @if (Model.HasError)
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }

                    <form asp-action="PayCreditCard" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            <label asp-for="FromAccountId" class="form-label fw-bold">Cuenta de Ahorros (Origen)</label>
                            <select asp-for="FromAccountId" class="form-control"
                                    asp-items="@(new SelectList(accountsList, "Id", "AccountNumber"))">
                                <option value="">Seleccione una cuenta</option>
                            </select>
                            <span asp-validation-for="FromAccountId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CreditCardId" class="form-label fw-bold">Tarjeta de Crédito</label>
                            <select asp-for="CreditCardId" class="form-control"
                                    asp-items="@(new SelectList(cardsList, "Id", "CardId"))">
                                <option value="">Seleccione una tarjeta</option>
                            </select>
                            <span asp-validation-for="CreditCardId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Amount" class="form-label fw-bold">Monto a Pagar (RD$)</label>
                            <input asp-for="Amount" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Pagar Tarjeta</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
