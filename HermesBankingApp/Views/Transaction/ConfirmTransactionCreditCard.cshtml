@model HermesBanking.Core.Application.ViewModels.Transaction.PayCreditCardViewModel

@{
    ViewData["Title"] = "Confirmar Pago a Tarjeta de Crédito";
    Layout = "_LayoutClient";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Confirmar Pago a Tarjeta de Crédito</h3>
                </div>
                <div class="card-body">
                    <dl class="row mb-4">
                        <dt class="col-sm-5">Cuenta Origen</dt>
                        <dd class="col-sm-7">@Model.FromAccountId</dd>

                        <dt class="col-sm-5">Tarjeta de Crédito</dt>
                        <dd class="col-sm-7">@Model.CreditCardId</dd>

                        <dt class="col-sm-5">Monto (RD$)</dt>
                        <dd class="col-sm-7">@Model.Amount.ToString("N2")</dd>
                    </dl>

                    <form asp-action="ConfirmTransactionCreditCard" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="FromAccountId" />
                        <input type="hidden" asp-for="CreditCardId" />
                        <input type="hidden" asp-for="Amount" />

                        <button type="submit" class="btn btn-success btn-lg">Confirmar</button>
                        <a asp-action="Index" asp-controller="Transaction" class="btn btn-secondary btn-lg">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
