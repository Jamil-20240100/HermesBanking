@model SaveCreditCardViewModel
@{
    ViewData["Title"] = "Editar Límite de Tarjeta";
}

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @ViewData["ErrorMessage"]
    </div>
}

<h2>Editar Límite de Tarjeta</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ClientId" />
    <input type="hidden" asp-for="ClientFullName" />
    <input type="hidden" asp-for="CreatedByAdminId" />
    <input type="hidden" asp-for="AdminFullName" />
    <input type="hidden" asp-for="CVC" value="000" />
    <input type="hidden" asp-for="TotalOwedAmount" value="0" />

    <div class="mb-3">
        <label asp-for="CreditLimit" class="form-label">Nuevo Límite</label>
        <input asp-for="CreditLimit" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="CreditLimit" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        <button type="submit" class="btn btn-success">Guardar cambios</button>
    </div>
</form>
